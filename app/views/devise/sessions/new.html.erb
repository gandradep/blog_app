
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Username(email)', class: 'w100 p10px' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'w100 p10px' %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: 'bgcNone border w100 shadow p10px' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
